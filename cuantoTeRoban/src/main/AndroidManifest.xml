<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.smartpocket.cuantoteroban"
    android:installLocation="auto"
    android:versionCode="29"
    android:versionName="5.1.1">
    <!-- 10 ; 15 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/CuantoTeRobanTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SingleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6954073861191346~7695861654" />

        <activity android:name=".MainActivity" />
        <activity
            android:name=".MainFragment"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".preferences.PreferencesActivity"
            android:label="@string/application_preferences"
            android:parentActivityName=".MainFragment">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainFragment" />
        </activity>
        <activity
            android:name=".preferences.PreferencesActivityForCurrency"
            android:label="@string/application_preferences"
            android:parentActivityName=".preferences.PreferencesActivity">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.smartpocket.cuantoteroban.preferences.PreferencesActivity" />
        </activity>

        <activity
            android:name=".AddCurrency"
            android:label="@string/title_activity_add_currency"
            android:launchMode="singleTop"
            android:parentActivityName=".MainFragment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainFragment" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".CurrencySuggestionProvider"
            android:authorities="com.smartpocket.cuantoteroban.CurrencySuggestionProvider"
            android:exported="false" />

    </application>

</manifest>