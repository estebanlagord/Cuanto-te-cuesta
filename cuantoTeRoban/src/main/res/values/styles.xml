<resources>

    <style name="CuantoTeRobanThemeMaterial" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="CuantoTeRobanTheme" parent="CuantoTeRobanTheme.Base" />

    <style name="CuantoTeRobanTheme.Base" parent="CuantoTeRobanThemeMaterial">

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="android:windowNoTitle">true</item>

        <item name="actionModeShareDrawable">@drawable/ic_share</item>
    </style>

    <style name="SplashTheme" parent="CuantoTeRobanTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="BaseCalculatorButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">@dimen/calculator_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/calculator_button_margin</item>
        <item name="backgroundTint">@color/calculator_button_number</item>
        <item name="android:padding">@dimen/calculator_button_padding</item>
    </style>

    <!-- Overridden in v26 -->
    <style name="CalculatorButton" parent="BaseCalculatorButton" />

    <style name="ButtonText" parent="CalculatorButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/calculator_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonImage" parent="CalculatorButton">
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/calculator_button_icon_size</item>
    </style>

    <style name="DiscountTaxField" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">false</item>
        <item name="boxBackgroundColor">@color/background_color</item>
    </style>

    <style name="ValueEditText" parent="Widget.AppCompat.EditText">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
        <item name="android:longClickable">false</item>
    </style>

</resources>